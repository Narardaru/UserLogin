<Window x:Class="StudentInfoSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="gpLogin" Header="Login" HorizontalAlignment="Left" Height="289" Margin="76,45,0,0" VerticalAlignment="Top" Width="561"/>
        <Label x:Name="lvlUsername" Content="Username" HorizontalAlignment="Left" Margin="109,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.044,-0.359"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="109,188,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="214,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="214,188,0,0" VerticalAlignment="Top" Width="229"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="493,284,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
    </Grid>
</Window>
